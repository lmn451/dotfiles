{
  "assistant": {
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o",
      "available_models": []
    }
  },
  "vim_mode": false,
  "base_keymap": "VSCode",
  "theme": "Ros√© Pine Dawn",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "cursor_blink": false,
  "buffer_font_size": 15,
  "buffer_font_family": "PragmataPro Mono Liga",
  // "buffer_font_family": "ZedMono Nerd Font Mono",
  // "terminal": {
  //   "font_family": "FiraCode Nerd Font"
  // },
  "format_on_save": "on",
  "formatter": {
    "external": {
      "command": "/Users/applesucks/Library/pnpm/prettier",
      "arguments": ["--stdin-filepath", "{buffer_path}"]
    }
  }
}
